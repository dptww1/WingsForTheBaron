%p#notice
  = notice

%p
  <b>Name:</b>
  = @game.name 

%p
  <b>Turn:</b>
  = @game.turn 

%p
  <b>Allied power:</b>
  = @game.allied_power 

%p
  <b>German morale:</b>
  = @game.german_morale 

%p
  <b>Allied morale:</b>
  = @game.allied_morale 

%p
  <b>Inflation:</b>
  = @game.inflation 

%p
  <b>Contracts available:</b>
  = @game.contracts_available 

%p
  <b>Complete:</b>
  = @game.complete 

%table
  %tr
    %th Player
    %th Score
    %th Bank
    %th Power
    %th Factories

  - @game.games_players.each do |gp|
    %tr
      %td
        = gp.side_name
      %td
        = gp.score
      %td
        = gp.bank
      %td
        = gp.power
      %td
        = gp.factories

= link_to 'Edit', edit_game_path(@game)
|
= link_to 'Back', games_path
