<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Turn</th>
    <th>Allied power</th>
    <th>German morale</th>
    <th>Allied morale</th>
    <th>Inflation</th>
    <th>Contracts available</th>
    <th>Contracts used</th>
    <th>Complete</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.turn %></td>
    <td><%= game.allied_power %></td>
    <td><%= game.german_morale %></td>
    <td><%= game.allied_morale %></td>
    <td><%= game.inflation %></td>
    <td><%= game.contracts_available %></td>
    <td><%= game.contracts_used %></td>
    <td><%= game.complete %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

